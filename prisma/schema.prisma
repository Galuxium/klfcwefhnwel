prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String?
  projects  Project[]
  subscriptions Subscription[]
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  files       File[]
}

model Subscription {
  id    Int    @id @default(autoincrement())
  user  User   @relation(fields: [userId], references: [id])
  userId Int
  stripeId String
}

model File {
  id         Int    @id @default(autoincrement())
  path       String
  projectId  Int
  project   Project @relation(fields: [projectId], references: [id])
}